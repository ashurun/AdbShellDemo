<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/settings">
        <Preference
            android:icon="@drawable/ic_baseline_refresh_24"
            android:title="@string/reset_title"
            android:summary="@string/reset_summary"
            android:key="@string/reset_key" />
        <SwitchPreference
            android:icon="@drawable/ic_baseline_home_repair_service_24"
            android:title="@string/auto_shell_title"
            android:summary="@string/auto_shell_summary"
            android:key="@string/auto_shell_key"
            android:dependency="@string/auto_pair_key"
            android:defaultValue="true"/>
        <SwitchPreference
            android:icon="@drawable/ic_baseline_home_repair_service_24"
            android:title="@string/auto_pair_title"
            android:summary="@string/auto_pair_summary"
            android:key="@string/auto_pair_key"
            android:defaultValue="true"/>
        <SwitchPreference
            android:icon="@drawable/ic_baseline_home_repair_service_24"
            android:title="@string/auto_wireless_title"
            android:summary="@string/auto_wireless_summary"
            android:key="@string/auto_wireless_key"
            android:defaultValue="true"/>
        <EditTextPreference
            android:icon="@drawable/ic_baseline_home_repair_service_24"
            android:title="@string/buffer_size_title"
            android:summary="@string/buffer_size_summary"
            android:key="@string/buffer_size_key"
            android:defaultValue="16384"/>
        <EditTextPreference
            android:icon="@drawable/ic_baseline_home_repair_service_24"
            android:title="@string/startup_command_title"
            android:summary="@string/startup_command_summary"
            android:key="@string/startup_command_key"
            android:defaultValue="echo 'Success! ※\\(^o^)/※'"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/troubleshooting">
        <Preference
            android:icon="@drawable/ic_baseline_help_24"
            android:title="@string/tutorial_title"
            app:summary="@string/tutorial_summary" />
        <Preference
            android:icon="@drawable/ic_baseline_error_24"
            android:title="@string/error_waiting_title"
            app:summary="@string/error_waiting_summary" />
        <Preference
            android:icon="@drawable/ic_baseline_error_24"
            android:title="@string/error_no_wireless_debugging_title"
            app:summary="@string/error_no_wireless_debugging_summary" />
        <Preference
            android:icon="@drawable/ic_baseline_error_24"
            android:title="@string/error_more_than_one_title"
            app:summary="@string/error_more_than_one_summary" />
        <Preference
            android:icon="@drawable/ic_baseline_error_24"
            android:title="@string/error_pairing_client_title"
            app:summary="@string/error_pairing_client_summary" />
        <Preference
            android:icon="@drawable/ic_baseline_error_24"
            android:title="@string/error_inaccessible_title"
            app:summary="@string/error_inaccessible_summary" />
        <Preference
            android:icon="@drawable/ic_baseline_error_24"
            android:title="@string/error_failed_to_find_title"
            app:summary="@string/error_failed_to_find_summary" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/about">
        <Preference
            android:icon="@drawable/ic_baseline_person_24"
            android:title="@string/developer_title"
            android:summary="@string/developer_summary"
            android:key="@string/developer_key" />
        <Preference
            android:icon="@drawable/ic_baseline_code_24"
            android:title="@string/source_title"
            android:summary="@string/source_summary"
            android:key="@string/source_key" />
        <Preference
            android:icon="@drawable/ic_baseline_email_24"
            android:title="@string/contact_title"
            android:summary="@string/contact_summary"
            android:key="@string/contact_key" />
        <Preference
            android:icon="@drawable/ic_baseline_insert_drive_file_24"
            android:title="@string/licenses_title"
            android:summary="@string/licenses_summary"
            android:key="@string/licenses_key" />
    </PreferenceCategory>
</PreferenceScreen>